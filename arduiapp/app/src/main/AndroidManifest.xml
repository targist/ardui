<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.targist.magicembed">

    <application
        android:icon="@drawable/targist_short_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/targist_short_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.MagicEmbed"
        android:name="com.targist.magicembed.Application">
        <activity
            android:name="com.targist.magicembed.ui.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MagicEmbed.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>
            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
        </activity>
    </application>

</manifest>